{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.configPath": ".prettierrc.cjs",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/.turbo": true,
    "**/.next": true,
    "**/*.log": true
  },
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },
  "editor.wordWrap": "off",
  "editor.formatOnSave": true,
  "pasteImage.basePath": "${projectRoot}/public/",
  "pasteImage.path": "${projectRoot}/public/screenshots",
  "pasteImage.prefix": "@",
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#407" // Change this color!
  },
  "grammarly.selectors": [
    {
      "language": "markdown",
      "scheme": "file"
    },
    {
      "language": "plaintext",
      "scheme": "file"
    }
  ]
}
